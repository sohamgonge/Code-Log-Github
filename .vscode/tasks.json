{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build and Run C++ (current folder)",
            "type": "shell",
            "command": "bash",
            "args": [
                "-c",
                "cd \"${fileDirname}\" && /usr/bin/clang++ *.cpp -std=c++23 -g -Wall -Wextra -o app.out"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"]
        }
        ,
        {
            "label": "Build and Run C++ (GCC 15, C++23)",
            "type": "shell",
            "command": "bash",
            "args": [
                "-c",
                "cd \"${fileDirname}\" && /opt/homebrew/bin/g++-15 *.cpp -std=c++23 -g -Wall -Wextra -o app_gcc.out"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "problemMatcher": ["$gcc"]
        }
    ]
}