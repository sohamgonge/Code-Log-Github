{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build and Run C",
            "type": "shell",
            "command": "bash",
            "args": [
                "-c",
                "gcc \"${file}\" -o \"${fileDirname}/${fileBasenameNoExtension}\" && \"${fileDirname}/${fileBasenameNoExtension}\""
            ],
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "Build and Run C++ (current folder)",
            "type": "shell",
            "command": "bash",
            "args": [
                "-c",
                "cd \"${fileDirname}\" && /usr/bin/clang++ *.cpp -std=c++23 -g -Wall -Wextra -o app.out"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "problemMatcher": [
                "$gcc"
            ],
            "detail": "Builds all C++ files in the active subfolder into app.out"
        },
        {
            "label": "Build and Run C++ (GCC 15, C++23)",
            "type": "shell",
            "command": "bash",
            "args": [
                "-c",
                "cd \"${fileDirname}\" && /opt/homebrew/bin/g++-15 *.cpp -std=c++23 -g -o app.out"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "problemMatcher": [
                "$gcc"
            ],
            "detail": "Builds all C++ files in the active subfolder using GNU GCC 15 with C++23"
        },
        {
            "type": "cppbuild",
            "label": "C/C++: clang++ build active file",
            "command": "/usr/bin/clang++",
            "args": [
                "-fcolor-diagnostics",
                "-fansi-escape-codes",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ]
}